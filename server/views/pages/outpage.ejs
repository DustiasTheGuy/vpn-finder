<html>
  <%- include("../partials/head") %>

  <style>
    main {
      height: 100vh;
      width: 100vw;
      background-color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    main .container {
      background-color: #333;
      width: 50%;
      height: 500px;
      display: flex;
      flex-direction: column;
      position: relative;
      border-bottom: 1px solid #fff;
    }

    main .container #go-back {
      position: absolute;
      bottom: 100%;
      margin-bottom: 10px;
    }

    main .container #thank-you-phone {
      display: none;
    }

    main .container #thank-you-desktop {
      width: 100%;
      height: 250px;
      background-image: url('/images/outpage.jpg');
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
    }

    main .container section {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      overflow: hidden;
    }

    main .container section .body {
      flex-grow: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    main .container section .body h3 {
      color: #fff;
      text-transform: capitalize;
      display: flex;
      align-items: center;
      gap: 20px;
    }

    main .container section footer {
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
      padding: 1em;
    }

    main .container section footer img {
      width: 48px;
      height: 48px;
      border-radius: 50%;
    }
  </style>
  <body>
    <main>
      <div class="container">
        <a id="go-back" href="/"> Go Back </a>

        <div id="thank-you-desktop"></div>
        <div id="thank-you-phone">
          <h1>Thank you for choosing vpnfind!</h1>
        </div>

        <section>
          <div class="body">
            <h3>
              <span>Vpnfind.site</span>
              <span class="material-icons-outlined">arrow_forward</span>
              <span><%= product.title %></span>
            </h3>
          </div>
          <footer>
            <div class="logo">
              <img src="<%= product.image %>" alt="" />
            </div>
          </footer>
        </section>
      </div>
    </main>

    <script>
      const url = '<%= product.affiliateUrl %>';
      window.setTimeout(() => {
        window.location.href = url;
      }, [1000]);
    </script>
  </body>
</html>
